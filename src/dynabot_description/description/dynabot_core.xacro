<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro" />

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>


    <!--BASE LINK-->
    <link name="base_link">

    </link>


    <!--CHASSIS LINK-->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis" />
        <origin xyz="-0.5495 0 0" />
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.5495 0 0.08135" />
            <geometry>
                <box size="1.099 0.6689 0.1627" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0.5495 0 0.08135" />
            <geometry>
                <box size="1.099 0.6689 0.1627" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="29.58" x="1.099" y="0.6689" z="0.1627">
            <origin xyz="0.5495 0 0.08135" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>


    <!--LEFT WHEEL LINK-->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.33445 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="left_wheel">
        <visual>
            <origin xyz="0 0 0.0681" />
            <geometry>
                <cylinder radius="0.202" length=".1362" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <origin xyz="0 0 0.0681" />
            <geometry>
                <cylinder radius="0.202" length=".1362" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="6.41" length=".1362" radius="0.202">
            <origin xyz="0 0 0.0681" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>


    <!--RIGHT WHEEL LINK-->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.33445 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1" />
    </joint>

    <link name="right_wheel">
        <visual>
            <origin xyz="0 0 0.0681" />
            <geometry>
                <cylinder radius="0.202" length=".1362" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <origin xyz="0 0 0.0681" />
            <geometry>
                <cylinder radius="0.202" length=".1362" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="6.41" length=".1362" radius="0.202">
            <origin xyz="0 0 0.0681" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>


    <!--FRONT CASTER WHEEL LINK-->
    <joint name="front_caster_wheel_joint" type="fixed">
        <parent link="chassis" />
        <child link="front_caster_wheel" />
        <origin xyz="1.099 0 -0.075" />
    </joint>

    <link name="front_caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.127" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.127" />
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="2.27" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_sphere>
    </link>


    <!--REAR CASTER WHEEL LINK-->
    <joint name="rear_caster_wheel_joint" type="fixed">
        <parent link="chassis" />
        <child link="rear_caster_wheel" />
        <origin xyz="0 0 -0.075" />
    </joint>

    <link name="rear_caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.127" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.127" />
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="2.27" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_sphere>
    </link>

    <!--BOTTOM FRAME-->
    <joint name="bottom_frame_joint" type="fixed">
        <parent link="chassis" />
        <child link="bottom_frame" />
        <origin xyz="0.2197 0 0.1627" />
    </joint>

    <link name="bottom_frame">
        <visual>
            <origin xyz="0.3298 0 0.14925" />
            <geometry>
                <box size="0.6596 0.6689 0.2985" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0.3298 0 0.14925" />
            <geometry>
                <box size="0.6596 0.6689 0.2985" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="8.22" x="0.6596" y="0.6689" z="0.2985">
            <origin xyz="0.3298 0 0.14925" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>


    <!--TOP FRAME-->
    <joint name="top_frame_joint" type="fixed">
        <parent link="bottom_frame" />
        <child link="top_frame" />
        <origin xyz="0 0 0.2985" />
    </joint>

    <link name="top_frame">
        <visual>
            <origin xyz="0.1651 0 0.0762" />
            <geometry>
                <box size="0.3302 0.6689 0.1524" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0.1651 0 0.0762" />
            <geometry>
                <box size="0.3302 0.6689 0.1524" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="8.22" x="0.3302" y="0.6689" z="0.1524">
            <origin xyz="0.1651 0 0.0762" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>





    <!--CAMERA-->
    <joint name="camera_joint" type="fixed">
        <parent link="bottom_frame" />
        <child link="camera_link" />
        <origin xyz="0.6947 0 0.2858" />
    </joint>

    <link name="camera_link">
        <visual>
            <origin xyz="-0.01755 0 0" />
            <geometry>
                <box size="0.0351 0.1143 0.0254" />
            </geometry>
            <material name="red" />
        </visual>
        <collision>
            <origin xyz="-0.01755 0 0" />
            <geometry>
                <box size="0.0351 0.1143 0.0254"  />
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.13" x="0.0351" y="0.1143" z="0.0254">
            <origin xyz="-0.01755 0 0" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>


    <!--GPS HOLDER + LIGHTS-->
    <joint name="gps_holder_joint" type="fixed">
        <parent link="top_frame" />
        <child link="gps_holder_link" />
        <origin xyz="0.29 0 0.1524" />
    </joint>

    <link name="gps_holder_link">
        <visual>
            <origin xyz="0 0 0.2525" />
            <geometry>
                <cylinder radius="0.030" length="0.505" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0 0 0.2525" />
            <geometry>
                <cylinder radius="0.030" length="0.505" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.34" length="0.505" radius="0.030">
            <origin xyz="0 0 0.2525" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>


    <!--GPS-->
    <joint name="gps_joint" type="fixed">
        <parent link="gps_holder_link" />
        <child link="gps_link" />
        <origin xyz="0 0 0.505" />
    </joint>

    <link name="gps_link">
        <visual>
            <origin xyz="-0 0 0" />
            <geometry>
                <box size="0.150 0.150 0.050" />
            </geometry>
            <material name="red" />
        </visual>
        <collision>
            <origin xyz="-0 0 0" />
            <geometry>
                <box size="0.150 0.150 0.050"  />
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.13" x="0.150" y="0.150" z="0.050">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>

    <!--IMU-->
    <joint name="imu_joint" type="fixed">
        <parent link="bottom_frame" />
        <child link="imu_link" />
        <origin xyz="0.658 0 0.2858" />
    </joint>

    <link name="imu_link">
        <visual>
            <origin xyz="0 0 0" />
            <geometry>
                <box size="0.01 0.01 0.007" />
            </geometry>
            <material name="red" />
        </visual>
        <collision>
            <origin xyz="0 0 0" />
            <geometry>
                <box size="0.01 0.01 0.007"  />
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.13" x="0.01" y="0.01" z="0.007">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>

    
